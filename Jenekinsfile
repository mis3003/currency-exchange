pipeline {
    agent any


    environment{
        DOCKERHUB_CREDENTIALS = credentials('a9cde4bd-bc38-4dfc-8cee-b0af884d41d5')
    }


    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('Pull') {
            steps {
                git credentialsId: 'PersonalAccessToken', url: 'https://github.com/mis3003/currency-exchange'
            }
        }

             stage('Clean up') {
            steps {
                echo "Cleaning up wrokspace..."
                sh '''
                docker image rm -f build_stage
                docker image rm -f test_stage
                docker image rm -f deploy_stage
                
            docker stop packing
                docker container rm packing
          
                '''
            }
        }

        
        stage('Files') {
            steps {
                echo "Checking files..."
                sh '''
                ls
                '''
            }
        }

        stage('Build') {
            steps {
                echo "Building..."
                sh '''
              
                docker build --no-cache -f Dockerfile.build -t build_stage .
                '''
            }
        }

        stage('Test') {
            steps {
                echo "Testing..."
                sh '''
              
                docker build --no-cache -f Dockerfile.test -t test_stage .
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying..."
                sh '''
           
                docker build --no-cache -f Dockerfile.deploy -t curency-exchange:latest .
       docker run --rm curency-exchange
                '''
            }
        }

        stage('Publish') {
            steps {
                echo "Finishing..."
                sh '''
               docker run --name packing build_stage
               docker cp packing:app/currency-exchange/target/exchange-1.0-SNAPSHOT.jar .



                echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
               
                docker tag curency-exchange:latest mis3003/curency-exchange:latest
                docker push mis3003/curency-exchange:latest
                docker logout

               
                '''
            }
        }
    }
}